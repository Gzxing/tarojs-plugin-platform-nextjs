{
    "compilerOptions": {
        "outDir": "lib",
        "allowJs": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "target": "es6",
        "jsx": "preserve",
        "moduleResolution": "node",
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}
